<% 
const subjectsTableHeadings =
 [{field:"_id", name:"ID", renderInput:true},
 {field:"code", name:"Code",renderInput:false },
 {field:"name", name:"Name",renderInput:false},];
%>
<!DOCTYPE html>
<html>

<head>
  <title>Subject</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="bg-gray-100 ">
  <%- include("../partials/navbar") %>
  <section class="flex">
    <%- include("../partials/sidebar" ,{link:"subject"}) %>
    <article class="p-4 flex flex-col overflow-hidden gap-4">
      <h1 class="text-xl font-semibold">Subjects</h1>
      <div>
        <%- include("../partials/admin/add_subject") %>
      </div>
      <form id="subjects_table">
        <table class="bg-white shadow-md divide-y rounded-md">
          <tr>
            <% subjectsTableHeadings.forEach(item=>{%>
            <th class="p-3 text-left"><%= item.name %> </th>
            <% }) %>
            <th class="p-3 text-left">Actions </th>
          </tr>
          <%subjects.forEach(item=>{ %>
          <tr class="border-b">
            <% subjectsTableHeadings.forEach((fieldItem,index)=>{%>
            <td class="p-3">
              <% if(fieldItem.renderInput) {%>
              <input type="checkbox" name="subject" value="<%=item[fieldItem.field] %>" />
              <% }else { %>
              <%= item[fieldItem.field] %>
              <% }%>
            </td>
            <% }) %>
            <td class="p-3 text-center">
              <button class="update_subject_btn text-indigo-500 uppercase" type="button">UPDATE</button>
            </td>
          </tr>
          <% }) %>
        </table>
      </form>
    </article>
    <%-include("../partials/admin/update_subject")%>
  </section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js" integrity="sha512-wT7uPE7tOP6w4o28u1DN775jYjHQApdBnib5Pho4RB0Pgd9y7eSkAV1BTqQydupYDB9GBhTcQQzyNMPMV3cAew==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.3/axios.min.js"></script>
  <script src="../js/subject.js"></script>
</body>

</html>