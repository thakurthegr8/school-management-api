<% 
const keys = [{type:"text", value:"first_name", placeholder:"First name"},
{type:"text", value:"last_name",placeholder:"Last name"},
{type:"email", value:"email", placeholder:"Email"},
{type:"select", value:"gender", placeholder:"Gender", options:["male", "female","others"]},
{type:"number", value:"age", placeholder:"Age", max:100, min:1},
{type:"select", value:"role", placeholder:"Role", options:["admin", "student","teacher"]}
]
const buttonClasses = "font-semibold text-white rounded-md p-2 hover:opacity-90 active:scale-90 transition-all";
 %>
<button class="<%=buttonClasses%> bg-black" id="add_user_btn">Add User</button>
<button class="<%=buttonClasses%> bg-red-500 hidden" id="delete_users_btn">Delete User(s)</button>
<dialog id="add_user_dialog" class="shadow-md rounded-md shadow-md w-full max-w-md transition border">
  <div>
    <h1 class="text-xl font-semibold">
      Add User
    </h1>
    
    <form id="addUserForm" class="flex flex-col gap-2">
      <% keys.forEach((item)=>{ %>
      <label for="<%= item.value%>" class="text-xs"><%= item.placeholder%></label>
      <% if(item.type === 'select'){ %>
      <select id="<%= item.value%>" name="<%= item.value%>" placeholder="<%= item.placeholder%>" class="border border-black p-3 rounded-xl outline-none focus:border-purple-500 text-sm" required>
        <% item.options.forEach((optionItem)=>{ %>
        <option value="<%= optionItem%>"><%=optionItem%></option>
        <%})%>
      </select>

      <% }else if (item.type === "number"){%>
      <input type="<%= item.type%>" id="<%= item.value%>" name="<%= item.value%>" max="<%= item.max%>" min="<%= item.min%>" placeholder="<%= item.placeholder%>" class="border border-black p-3 rounded-xl outline-none focus:border-purple-500 text-xs" required />
      <% }else {%>
      <input type="<%= item.type%>" id="<%= item.value%>" name="<%= item.value%>" placeholder="<%= item.placeholder%>" class="border border-black p-3 rounded-xl outline-none focus:border-purple-500 text-xs" required />
      <% }%>
      <% }) %>
      <div>
        <button class="<%=buttonClasses%> bg-blue-500" type="submit">Submit</button>
        <button class="<%=buttonClasses%> bg-white border text-black border-black" type="reset" id="add_user_cancel_submission">Cancel</button>
      </div>
    </form>

  </div>
</dialog>